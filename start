echo "Stopping Forever processes..."
sudo forever stopall

echo "Using forever to start up Quake"
cd $QUIVER_DEVELOPMENT_ROOT/quake/
sudo forever start -l /var/log/forever/quake.log --minUptime 5000 --spinSleepTime 5000 --append  --watch app.js

echo "Using forever to start up Quiver"
cd $QUIVER_DEVELOPMENT_ROOT/quiver/
sudo forever start -l /var/log/forever/quiver.log --minUptime 5000 --spinSleepTime 5000  --append  --watch server.js

echo "Firing up the proxy"
cd $QUIVER_DEVELOPMENT_ROOT/quiver-build/
sudo forever start -l /var/log/forever/proxy.log --minUptime 5000 --spinSleepTime 5000 --append --watch proxy.js
